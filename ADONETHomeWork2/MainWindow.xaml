<Window x:Class="ADONETHomeWork2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADONETHomeWork2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Name="btn_Fill" Content="Fill" Grid.Column="0" Click="btn_Fill_Click"></Button>
            <Button Name="btn_Update" Content="Update" Grid.Column="1" Click="btn_Update_Click"></Button>
            <Button Name="btn_Delete" Content="Delete" Grid.Column="2" Click="btn_Delete_Click"></Button>
        </Grid>
        <TextBox Name="tBox" Grid.Row="1" TextChanged="TextBox_TextChanged"></TextBox>
        <DataGrid x:Name="DataGrid" Grid.Row="2"></DataGrid>
    </Grid>
</Window>
